extends layout

block content
  section.hero.is-fullheight.is-default.is-dark
    .hero-head
        .container
          nav.nav
            .container
              .nav-left
                a.nav-item(href='/')
                  img(src='/images/bulma-white.png', alt='Description')
              span.nav-toggle
                span
                span
                span
              .nav-right.nav-menu
                a.nav-item(href='/')
                  | Home
                a.nav-item(href='/departments')
                  | Components
                a.nav-item(href='/departments/addnew')
                  | Add Data
                a.nav-item(href='/auth/logout')
                  | Log Out
    .hero-body
      .container
        .columns.is-vcentered
          .column.is-5
            figure.image.is-4by3
              img(src="#{departmentdata.picture}", alt='Image')
          .column.is-6.is-offset-1
            h1.title
              | Components Details
            br
            h2.subtitle
              | Component Name: #{departmentdata.comp_name}
            h2.subtitle
              | Description: #{departmentdata.description}
            h2.subtitle
              | Value: #{departmentdata.value}
            h2.subtitle
              | Available:  #{departmentdata.contact}
            br
            br
            h2.subtitle
              | Creation Date: #{moment(departmentdata.createdate).format("LLL")}
            h2.subtitle
              | Update Date: #{departmentdata.updatedate}
    .tabs.is-fullwidth
        .container
          ul
            li
              a.btn.btn-link(href='/departments/'+departmentdata._id+'/update')
                button.button.is-medium(type="button") Edit
            li
              a(href='/departments/'+departmentdata._id+'/delete')
                button.button.is-medium(type="button") Delete
  
  include footer

              
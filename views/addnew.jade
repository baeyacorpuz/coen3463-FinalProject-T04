                  input.input(type="text", placeholder="", name="comp_name" )
                label.label 
                  | Description 
                  strong.iscolor *
                  input.input(type="text", placeholder="", name="description" )
                label.label 
                  | Value
                  strong.iscolor *
                  input.input(type="text", placeholder="", name="value" )
